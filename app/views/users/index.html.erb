<h1>Users</h1>

<table class='table table-hover table-striped'>
  <thead>
    <tr>
      <th>First name</th>
      <th>Last name</th>
      <th>Is staff</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.first_name %></td>
        <td><%= user.last_name %></td>
        <td><%= user.is_staff %></td>
        <td><%= link_to 'Show', user, class: "btn btn-info", style: "color:white" %></td>
        <% if @current_user.is_staff %>
          <td><%= link_to 'Edit', edit_user_path(user), class: "btn btn-primary", style: "color:white" %></td>
          <td><%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger", style: "color:white" %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
