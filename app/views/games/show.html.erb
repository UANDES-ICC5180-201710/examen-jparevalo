
<% if @current_user.id %>
      <% button_class = 'btn btn-primary notActive' %>
      <% button_title = 'Save as Purcharsed' %>
      <% @current_user.purcharses.each do |pu| %>
        <% if pu.game == @game %>
          <% button_class = 'btn btn-success isActive' %>
          <% button_title = "Remove from Purcharses" %>
          <% break %>
        <% end %>
      <% end %>
    <% end %>
<span>
<button title="Toggle Purcharse" onclick="togglePurcharse(<%= @game.id -%>)" id="<%= @game.id -%>" type="button" class="<%= button_class -%>">
  <%= button_title -%>
</button>
    <p id='people-purcharsed-<%= @game.id -%>' style="display:inline;">Purcharses: <%= @game.purcharses.length %></p>
</span>

<br><br>

<div class = "row">
  <div class = "col-md-3" align = "left">
    <img src="<%= @game.image_url %>" style="max-width: 100%;"><img>
  </div>
  <div class = "col-md-9" align = "left">
    <div class="panel panel-default">
      <div class="panel-heading">
      <h1>
        <%= @game.title %>
      </h1>
    </div>
    <div class="panel-body">
    <p>
      <%= @game.description %>
    </p>
    </div>
  </div>

  </div>

</div>
<br><br>
<div>
  <% if @current_user.is_staff %>
    <%= link_to 'Edit', edit_game_path(@game), class: "btn btn-primary", style: "color:white" %> |
  <% end %>
  <%= link_to 'Back', games_path, class: "btn btn-danger", style: "color:white" %>
</div>
